<Window x:Class="Melembre_v2.Views.Dialogs.NewCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Melembre_v2.Views.Dialogs"
        mc:Ignorable="d"
        Title="NewCategory" Height="172" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid >
        <StackPanel Margin="10">
            <TextBlock HorizontalAlignment="Left" FontSize="20" FontWeight="SemiBold" Foreground="#514F56" Text="Digite a nova categoria"/>
            <TextBox Margin="0,10,0,0" x:Name="input_txt" MaxLength="20" TextAlignment="Justify"  FontSize="15" Height="30"  Padding="3" BorderBrush="Transparent">
                <TextBox.Effect>
                    <DropShadowEffect ShadowDepth="1" Opacity="0.3" Color="#FF999999"/>
                </TextBox.Effect>
            </TextBox>

            <Button x:Name="btn_salvar" Click="btn_salvar_Click" Margin="0,10,0,0" FontSize="16" Content="Salvar" Background="Transparent" BorderThickness="0" Padding="10" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6A686D"/>
            
        </StackPanel>

    </Grid>
</Window>
